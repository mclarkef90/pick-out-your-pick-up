<%=form_with model: @user, local: true do |f| %>

  <div class="field">
    <%=f.label :first_name%>
    <%=f.text_field :first_name%>
  </div>

  <br>

  <div class="field">
    <%=f.label :last_name%>
    <%=f.text_field :last_name%>
  </div>

  <br>

  <div class="field">
    <%=f.label :email%>
    <%=f.email_field :email%>
  </div>

  <br>

  <div class="field">
    <%=f.label :Password%>
    <%=f.password_field :password%>
  </div>

  <br>

  <div class="field">
    <%=f.label :Password_Confirmation%>
    <%=f.password_field :password_confirmation%>
  </div>

  <br>

  <div class="actions">
    <%=f.submit%>
  </div>
<%end%>
