<h1>Manage Your Restaurants</h1>

<div class='container-fluid'>
      <p id="notice"><%= notice %></p>
      <div class='row py-3 px-3'>
        <div class='col-12 col-sm-8'>
          <table id='restaurants-table' class="table table-hover">
            <thead  class="thead-light">
              <tr>
                <th>Name</th>
                <th>Menu Name</th>
                <th>View</th>
                <th>Edit</th>
                <th>Delete</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @restaurants.each do |restaurant| %>
                <tr>
                  <td><%= restaurant.name %></td>
                  <% restaurant.menus.each do |menu|%>
                  <td><%= menu.name %></td>
                  <td><%= link_to "Show", restaurant_menu_path(menu.restaurant, menu) %></td>
                  <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
                  <td><%= link_to 'Delete', menu_path(menu), method: :delete%></td>
                </tr>
              <% end %>
              <% end %>
            </tbody>
          </table>
          <br>
        </div>

  <% if current_user && current_user.restaurant_owner?%>
<h3><%= link_to "Create A New Restaurant Profile", new_restaurant_path%></h3<

<%end%>
