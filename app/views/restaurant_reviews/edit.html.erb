<h1><%="Edit Your Restaurant Review for:"%></h1>
<h1><%=@restaurant_review.restaurant.name%><br><br>

<%= render partial: "layouts/errors", locals: {object: @restaurant_review}%>

<%= form_with model: @restaurant_review, local: true do |f| %>

  <div class="field">
   <%= f.label :rating %>
   <%= f.number_field :rating %>
  </div>

  <br>

  <div class="field">
   <%= f.label :comment %>
   <%= f.text_area :comment %>
  </div>

  <br>

<%=f.submit%>

<%end%>
