<h1>All Restaurant Reviews for:</h1>

<% if @restaurant != nil%>
<h1>  <%= @restaurant.name%></h1>
<%else @user != nil%>
<h1>  <%= @user.first_name%> </h1>
  <%end%>

<br>
<%@restaurant_reviews.each do |review|%>
      <%=review.rating%><br>
      <%=review.comment%><br>
      <%=review.user.first_name%><br>
      <%=link_to "Edit", edit_restaurant_review_path(review)%>
      <%=link_to "Delete Restaurant Review", restaurant_review_path(review), method: :delete%>
      <br><br>
<%end%>

<h1>Manage Your Reviews</h1>

<div class='container-fluid'>
      <p id="notice"><%= notice %></p>
      <div class='row py-3 px-3'>
        <div class='col-12 col-sm-8'>
          <table id='restaurant-reviews-table' class="table table-hover">
            <thead  class="thead-light">
              <tr>
                <th>Restaurant Name</th>
                <th>Rating</th>
                <th>Comment</th>
                <th>View</th>
                <th>Edit</th>
                <th>Delete</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @restaurant_reviews.each do |review| %>
                <tr>
                  <td><%= review.restaurant.name %></td>
                  <td><%= review.rating %></td>
                  <td><%= review.comment %></td>
                  <td><%= link_to "Show", restaurant_restaurant_review_path(review.restaurant, review) %></td>
                  <td><%= link_to 'Edit', edit_restaurant_review_path(review) %></td>
                  <td><%= link_to 'Delete', restaurant_review_path(review), method: :delete%></td>
                </tr>

              <% end %>
            </tbody>
          </table>
          <br>
        </div>
