<!DOCTYPE html>
<html>
  <head>
    <title>POPU</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class= "navbar">

      <% if logged_in? && restaurant_owner? %>
      <%= link_to "Search Restaurants", restaurants_path%>
      <%= link_to "Menus", menus_path%>
      <%= link_to "Reviews", restaurant_reviews_home_path%>
      <%= link_to "Manage Your Restaurant Reviews", user_restaurant_reviews_path(current_user.id)%>
      <%= link_to "Manage Your Food Reviews", user_menu_item_reviews_path(current_user.id)%>
      <%= link_to "Manage Your Restaurants", owner_home_path %>
      <%= link_to "Sign Out", signout_path, method: 'delete' %>

      <%elsif logged_in? %>
      <%= link_to "Search Restaurants", restaurants_path%>
      <%= link_to "Top Rated", restaurant_reviews_home_path%>
      <%= link_to "Reviews", restaurant_reviews_home_path%>
      <%= link_to "Sign Out", signout_path, method: 'delete' %>



      <%else%>
      <%= link_to "Sign Up", signup_path%> |
      <%= link_to "Sign In", signin_path%> |
      <%= link_to "Google Sign Up/In", '/auth/google_oauth2'%> |

      <%end%>
    </div>

    <div>
      <% if flash[:message] %>
        <%= flash[:message] %>
      <%end%>

      <%=@error%>
      </div>
    <%= yield %>
  </body>
</html>
