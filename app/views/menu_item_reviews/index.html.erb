<h1>All Menu Item Reviews for:</h1>

<% if @menu_item != nil%>
<h1>  <%= @menu_item.name%></h1>
<%else @user != nil%>
<h1>  <%= @user.first_name%> </h1>
  <%end%>

<br>

<div class='container-fluid'>
      <p id="notice"><%= notice %></p>
      <div class='row py-3 px-3'>
        <div class='col-12 col-sm-8'>
          <table id='menu-item-reviews-table' class="table table-hover">
            <thead  class="thead-light">
              <tr>
                <th>Date</th>
                <th>User</th>
                <th>Rating</th>
                <th>Comment</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>

                <tr>
                  <% @menu_item_reviews.each do |review| %>
                  <td><%= review.created_at.strftime("%m/%Y")%></td>
                  <td><%= review.user.first_name %></td>
                  <td><%= review.rating %></td>
                  <td><%= review.comment %></td>
                  </tr>
              <% end %>
            </tbody>
          </table>
          <br>
        </div>
