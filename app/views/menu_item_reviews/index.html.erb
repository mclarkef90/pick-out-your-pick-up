<h1>All Menu Item Reviews for:</h1>

<% if @menu_item != nil%>
<h1>  <%= @menu_item.name%></h1>
<%else @user != nil%>
<h1>  <%= @user.first_name%> </h1>
  <%end%>

<br>
<%@menu_item_reviews.each do |review|%>
      <%=review.rating%><br>
      <%=review.comment%><br>
      <%=review.user.first_name%><br>
      <%=link_to "Edit", edit_menu_item_review_path(review)%>
      <%=link_to "Delete Menu Item Review", menu_item_review_path(review), method: :delete%>
      <br><br>
<%end%>

<div class='container-fluid'>
      <p id="notice"><%= notice %></p>
      <div class='row py-3 px-3'>
        <div class='col-12 col-sm-8'>
          <table id='menu-item-reviews-table' class="table table-hover">
            <thead  class="thead-light">
              <tr>

                <th>Rating</th>
                <th>Comment</th>
                <th>View</th>
                <th>Edit</th>
                <th>Delete</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>

                <tr>
                  <% @menu_item_reviews.each do |review| %>
                  
                  <td><%= review.rating %></td>
                  <td><%= review.comment %></td>
                  <td><%= link_to "Show", menu_item_menu_item_review_path(review.menu_item_id, review) %></td>
                  <td><%= link_to 'Edit', edit_menu_item_review_path(review) %></td>
                  <td><%= link_to 'Delete', menu_item_review_path(review), method: :delete%></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
        </div>
