<h1><%="Edit Your Menu Item Review for:"%></h1>
<h1><%=@menu_item_review.menu_item.name%><h1>
  <br><br>

  <%= render partial: "layouts/errors", locals: {object: @menu_item_review}%>

  <%= form_with model: @menu_item_review, local: true do |f| %>

    <div class="field">
       <%= f.label :rating %>
       <%= f.number_field :rating %>
    </div>

    <div class="field">
       <%= f.label :comment %>
       <%= f.text_area :comment %>
    </div>

    <%=f.submit%>

  <%end%>
