<h1>Reviews for <%=@menu_item.name%>, at <%=@menu_item.menu.restaurant.name%></h1>

  <p id="notice"><%= notice %></p>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>User</th>
          <th>Rating</th>
          <th>Comment</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <tr><% @menu_item.menu_item_reviews.each do |review| %>
          <td><%= review.created_at.strftime("%m/%Y")%></td>
          <td><%= review.user.first_name %></td>
          <td><%= review.rating %></td>
          <td><%= review.comment %></td>
        </tr><% end %>
      </tbody>
    </table>

<h3><%=link_to "Add a Review", new_menu_item_menu_item_review_path(@menu_item.menu, @menu_item)%></h3>
